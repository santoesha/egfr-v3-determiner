import click


@click.command()
@click.option("--reference-build", "-r",  type=click.Choice(['hg19', 'hg38']), help="Used reference genome (needed for EGFR exon coordinates)")
@click.argument('rna_seq_alignment_files', type=click.Path(exists=True))
def main():
    click.echo('Hello World!')

if __name__ == '__main__':
    main()


